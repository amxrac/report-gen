@using rgproj.ViewModels;
@model SignUpVM;

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4 fw-bold" style="color: #2c3e50;">Create Stakeholder Account</h2>
            <form method="post" asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" id="Location" asp-for="Location" placeholder="Location">
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <select class="form-select" id="Role" asp-for="Role">
                        <option value="" disabled selected>Select Role</option>
                        <option value="Environmentalist">Environmentalist</option>
                        <option value="Veterinary Doctor">Veterinary Doctor</option>
                        <option value="Specialist">Specialist</option>
                        <option value="Health Officer">Health Officer</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Sign Up</button>
                <div class="text-center">
                    <span>Already have an account?</span>
                    <a asp-action="Login" class="text-decoration-none ms-2">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

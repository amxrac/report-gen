@using rgproj.ViewModels;
@model AdminDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<form method="post" asp-action="ProcessSelectedForms">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Submitted Forms</h4>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="formTabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#environmentalist">Environmentalist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#veterinary">Veterinary</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#specialist">Specialist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#healthOfficer">Health Officer</a>
                            </li>
                        </ul>

                        <div class="tab-content mt-3">
                            <!-- Environmentalist Forms -->
                            <div class="tab-pane fade show active" id="environmentalist">
                                @if (Model.EnvironmentalistForms.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Date Submitted</th>
                                                <th>Form Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var form in Model.EnvironmentalistForms)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox"
                                                               name="selectedForms"
                                                               value="@form.Id"
                                                        @(Model.SelectedFormIds.Contains(form.Id) ? "checked" :                                 "") />
                                                    </td>
                                                    <td>@form.DateSubmitted.ToString("d")</td>
                                                    <td>Environmental Report</td>
                                                    <td>
                                                        <a asp-action="ViewForm"
                                                           asp-route-formType="Environmentalist"
                                                           asp-route-id="@form.Id"
                                                           class="btn btn-sm btn-primary">View</a>
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No Environmentalist Forms submitted.</p>
                                }
                            </div>

                            <div class="tab-pane fade" id="veterinary">
                                @if (Model.VeterinaryForms.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Date Submitted</th>
                                                <th>Form Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var form in Model.VeterinaryForms)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox"
                                                               name="selectedForms"
                                                               value="@form.Id"
                                                        @(Model.SelectedFormIds.Contains(form.Id) ? "checked" : "") />
                                                    </td>
                                                    <td>@form.DateSubmitted.ToString("d")</td>
                                                    <td>Veterinary Report</td>
                                                    <td>
                                                        <a asp-action="ViewForm"
                                                           asp-route-formType="Veterinary"
                                                           asp-route-id="@form.Id"
                                                           class="btn btn-sm btn-primary">View</a>
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No Veterinary Forms submitted.</p>
                                }
                            </div>

                            <div class="tab-pane fade" id="specialist">
                                @if (Model.SpecialistForms.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Date Submitted</th>
                                                <th>Form Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var form in Model.SpecialistForms)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox"
                                                               name="selectedForms"
                                                               value="@form.Id"
                                                        @(Model.SelectedFormIds.Contains(form.Id) ? "checked" : "") />
                                                    </td>
                                                    <td>@form.DateSubmitted.ToString("d")</td>
                                                    <td>Specialist Report</td>
                                                    <td>
                                                        <a asp-action="ViewForm"
                                                           asp-route-formType="Specialist"
                                                           asp-route-id="@form.Id"
                                                           class="btn btn-sm btn-primary">View</a>
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No Specialist Forms submitted.</p>
                                }
                            </div>

                            <div class="tab-pane fade" id="healthOfficer">
                                @if (Model.HealthOfficerForms.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Date Submitted</th>
                                                <th>Form Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var form in Model.HealthOfficerForms)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox"
                                                               name="selectedForms"
                                                               value="@form.Id"
                                                        @(Model.SelectedFormIds.Contains(form.Id) ? "checked" : "") />
                                                    </td>
                                                    <td>@form.DateSubmitted.ToString("d")</td>
                                                    <td>Health Officer Report</td>
                                                    <td>
                                                        <a asp-action="ViewForm"
                                                           asp-route-formType="HealthOfficer"
                                                           asp-route-id="@form.Id"
                                                           class="btn btn-sm btn-primary">View</a>
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No Health Officer Forms submitted.</p>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="text-muted">
                                Selected: <span id="selectedCount">@Model.SelectedFormIds.Count</span>/10
                            </div>
                            <button type="submit" class="btn btn-primary">Process Selected Forms</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var firstTab = new bootstrap.Tab(document.querySelector("#formTabs .nav-link.active"));
            firstTab.show();
        });
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"][name="selectedForms"]');
            const counter = document.getElementById('selectedCount');

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const selected = document.querySelectorAll('input[type="checkbox"][name="selectedForms"]:checked').length;
                    counter.textContent = selected;

                    if (selected >= 10) {
                        checkboxes.forEach(cb => {
                            if (!cb.checked) cb.disabled = true;
                        });
                    } else {
                        checkboxes.forEach(cb => cb.disabled = false);
                    }
                });
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            const checkboxes = document.querySelectorAll("input[name='selectedForms']");
            const selectedCount = document.getElementById("selectedCount");

            // Load selected form IDs from local storage
            let selectedForms = JSON.parse(localStorage.getItem("selectedForms")) || [];

            // Restore selections
            checkboxes.forEach(checkbox => {
                if (selectedForms.includes(parseInt(checkbox.value))) {
                    checkbox.checked = true;
                }
            });

            function updateSelection() {
                // Get all checked checkboxes
                selectedForms = Array.from(document.querySelectorAll("input[name='selectedForms']:checked"))
                    .map(cb => parseInt(cb.value));

                // Save updated selection to local storage
                localStorage.setItem("selectedForms", JSON.stringify(selectedForms));

                // Update the count UI
                selectedCount.textContent = selectedForms.length;
            }

            // Attach event listener to checkboxes
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener("change", updateSelection);
            });

            // Initial update
            updateSelection();

            // Ensure correct selections when navigating back
            window.addEventListener("pageshow", function () {
                let storedForms = JSON.parse(localStorage.getItem("selectedForms")) || [];
                checkboxes.forEach(checkbox => {
                    checkbox.checked = storedForms.includes(parseInt(checkbox.value));
                });
                selectedCount.textContent = storedForms.length;
            });

        });
    </script>
}
@model List<GeneratedReport>

<h2>All Reports</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date Generated</th>
            <th>Model Used</th>
            <th>Public?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.GeneratedDate.ToString("f")</td>
                <td>@report.ModelUsed</td>
                <td>@(report.IsPublic ? "Yes" : "No")</td>
                <td>
                    <a asp-action="ReportPreview" asp-route-id="@report.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="DownloadReport" asp-route-id="@report.Id" class="btn btn-primary btn-sm">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>

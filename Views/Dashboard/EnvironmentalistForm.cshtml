@using rgproj.ViewModels;
@model EnvironmentalistFormVM;

<div class="card">
    <div class="card-header">
        <h4>Submit New Environnmentalist Form</h4>
    </div>
    <div class="card-body">
        <form asp-action="EnvironmentalistForm" method="post">
            <div class="mb-3">
                <label asp-for="DateSubmitted" class="form-label">Date</label>
                <input type="text" class="form-control" id="DateSubmitted" value="@Model.DateSubmitted.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SubmittedByUser" class="form-label">Submitted By</label>
                <input asp-for="SubmittedByUser" class="form-control" readonly />
                <span asp-validation-for="SubmittedByUser" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="Location" class="form-label">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WitnessDetails" class="form-label">Witness Details</label>
                <textarea asp-for="WitnessDetails" class="form-control"></textarea>
                <span asp-validation-for="WitnessDetails" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <select asp-for="Category" class="form-select">
                    <option value="" disabled selected>Choose a category</option>
                    <option value="Air Pollution">Air Pollution</option>
                    <option value="Soil Contamination">Soil Contamination</option>
                    <option value="Hazardous Material Spill">Hazardous Material Spill</option>
                    <option value="Noise Pollution">Noise Pollution</option>
                    <option value="Water Pollution">Water Pollution</option>
                    <option value="Wildlife Disturbance">Wildlife Disturbance</option>
                    <option value="Radiation">Radiation</option>
                    <option value="Bush Fires">Bush Fires</option>
                    <option value="Flooding">Flooding</option>
                    <option value="Carbon Emissions">Carbon Emissions</option>
                    <option value="Deforestation">Deforestation</option>
                    <option value="Waste Management">Waste Management</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ActionsTaken" class="form-label">Actions Taken</label>
                <textarea asp-for="ActionsTaken" class="form-control"></textarea>
                <span asp-validation-for="ActionsTaken" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Has this been reported?</label>
                <div class="form-check">
                    <input asp-for="IsReported" class="form-check-input" type="radio" id="isReportedYes" value="true" />
                    <label class="form-check-label" for="isReportedYes">Yes</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsReported" class="form-check-input" type="radio" id="isReportedNo" value="false" />
                    <label class="form-check-label" for="isReportedNo">No</label>
                </div>
                <span asp-validation-for="IsReported" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReportedDetails" class="form-label">Reported Details</label>
                <textarea asp-for="ReportedDetails" class="form-control"></textarea>
                <span asp-validation-for="ReportedDetails" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FollowUpAction" class="form-label">Follow-Up Action</label>
                <textarea asp-for="FollowUpAction" class="form-control"></textarea>
                <span asp-validation-for="FollowUpAction" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Submit Form</button>
            </div>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

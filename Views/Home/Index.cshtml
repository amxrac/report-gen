@model List<rgproj.Models.GeneratedReport>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Public One Health Reports</h2>
        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger">Logout</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Sign Up</a>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var report in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Report #@report.Id</h5>
                            <p class="card-text"><small class="text-muted">Generated: @report.GeneratedDate.ToString("MMMM dd, yyyy")</small></p>
                            <p class="card-text">@report.Content.Substring(0, Math.Min(report.Content.Length, 200))...</p>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@report.Id" class="btn btn-sm btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No public reports available.</p>
    }
</div>
